<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#363535"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/tvListTruyenToday"
        android:text="TRUYỆN HAY TRONG NGÀY"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvAllListTruyenToday"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textColor="#77FFFFFF"
        android:text="All Truyện ->>"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ListView
        android:layout_below="@+id/tvListTruyenToday"
        android:id="@+id/lvListTruyenToday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>