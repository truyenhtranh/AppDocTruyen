<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#363535"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="HUYỀN NGUYỄN"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAllHuyenNguyen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="All Truyện ->>"
            android:textColor="#77FFFFFF"
            android:textStyle="bold" />
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvCardViewHuyenNguyen"
        android:layout_gravity="center"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgViewHuyenNguyen"
        android:src="@drawable/huyennguyen"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:text="Tho San Nang Luong"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:textColor="#DCFFFFFF"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/tvHuyenNguyen1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcHuyenNguyen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>